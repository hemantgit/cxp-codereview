<catalog>
    <widget>
        <name>account-overview-heading</name>
        <contextItemName>[BBHOST]</contextItemName>
        <properties>
            <property label="Title" name="title" viewHint="text-input,admin">
                <value type="string">Account Overview Heading</value>
            </property>
            <property label="Icon" name="icon" viewHint="text-input,admin,designModeOnly">
                <value type="string"></value>
            </property>
            <property name="src">
                <value type="string">$(itemRoot)/index.html</value>
            </property>
            <property name="thumbnailUrl">
                <value type="string">$(itemRoot)/icon.png</value>
            </property>
            <!-- custom properties -->
            <property label="Main Heading" name="main-heading" viewHint="text-input,admin">
                <value type="string">Your accounts</value>
            </property>
            <property label="Sub Heading" name="sub-heading" viewHint="text-input,admin">
                <value type="string">Select the account you wish to start applying an overdraft for </value>
            </property>
        </properties>
        <tags>
        </tags>
    </widget>
</catalog>
