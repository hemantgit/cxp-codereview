<catalog>
    <widget>
        <name>widget-logo</name>
        <contextItemName>[BBHOST]</contextItemName>
        <properties>
            <property label="Title" name="title" viewHint="text-input,admin">
                <value type="string">Logo Widget</value>
            </property>
            <property label="Icon" name="icon" viewHint="text-input,admin,designModeOnly">
                <value type="string"></value>
            </property>
            <property name="src">
                <value type="string">$(itemRoot)/index.html</value>
            </property>
            <property name="thumbnailUrl">
                <value type="string">$(itemRoot)/icon.png</value>
            </property>
            <!-- custom properties -->
            <property label="Web Logo" name="webLogo" viewHint="text-input,admin,designModeOnly">
                <value type="string">/portalserver/static/widgets/[BBHOST]/widget-logo/media/hsbc-web-logo.gif</value>
            </property>
            <property label="Mobile Logo" name="mobileLogo" viewHint="text-input,admin,designModeOnly">
                <value type="string">/portalserver/static/widgets/[BBHOST]/widget-logo/media/hsbc-mobile-logo.gif</value>
            </property>
        </properties>
        <tags>
        </tags>
    </widget>
</catalog>
